<Window x:Class="RemoteProcedure.RemoteCall"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteProcedure"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="None" WindowState="Maximized"
        Title="RemoteCall" Background="Transparent" Topmost="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Image Source="images/700x86-Banner.jpg" DockPanel.Dock="Top" Margin="20,0,0,40"></Image>
        </DockPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Top" Background="LightBlue" Height="200" Width="500" Margin="20">
            <TextBlock Name="PoliteMessage" TextWrapping="WrapWithOverflow"/>
            <Button Click="Button_Click" Content="Acknowledge" MaxWidth="100" Margin="30" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
